{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { 
      "src": "/hktaximeter/assets/(.*)", 
      "dest": "/assets/$1" 
    },
    { 
      "src": "/hktaximeter/fonts/(.*)", 
      "dest": "/fonts/$1" 
    },
    { 
      "src": "/hktaximeter/(.*\\.(js|css|map|json|png|jpg|jpeg|gif|svg|ico|ttf|otf|woff|woff2))", 
      "dest": "/$1" 
    },
    { 
      "src": "/hktaximeter/(.*)", 
      "dest": "/index.html" 
    },
    { 
      "src": "/hktaximeter", 
      "dest": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/hktaximeter/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/hktaximeter/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}