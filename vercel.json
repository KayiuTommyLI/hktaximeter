{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/hktaximeter/(.*)",
      "destination": "/hktaximeter/$1"
    },
    {
      "source": "/hktaximeter",
      "destination": "/hktaximeter/index.html"
    }
  ],
  "headers": [
    {
      "source": "/hktaximeter/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ]
}